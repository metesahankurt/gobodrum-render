{
    "kind": "collectionType",
    "collectionName": "tags",
    "info": {
        "singularName": "tag",
        "pluralName": "tags",
        "displayName": "Tag",
        "description": "Content tags for better organization and discoverability"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name",
            "required": true
        },
        "description": {
            "type": "text",
            "maxLength": 300
        },
        "color": {
            "type": "string",
            "default": "#6B7280"
        },
        "textColor": {
            "type": "string",
            "default": "#FFFFFF"
        },
        "icon": {
            "type": "string"
        },
        "usageCount": {
            "type": "integer",
            "default": 0
        },
        "isActive": {
            "type": "boolean",
            "default": true
        },
        "isTrending": {
            "type": "boolean",
            "default": false
        },
        "category": {
            "type": "enumeration",
            "enum": ["general", "location", "activity", "feature", "season", "special"],
            "default": "general"
        },
        "seoTitle": {
            "type": "string",
            "maxLength": 60
        },
        "seoDescription": {
            "type": "text",
            "maxLength": 160
        }
    }
}
