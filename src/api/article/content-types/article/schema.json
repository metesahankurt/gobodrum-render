{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Blog posts, news articles and content pieces for GoBodrum website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid", 
      "targetField": "title",
      "required": true
    },
    "routeSection": {
      "type": "enumeration",
      "enum": [
        "discover",
        "things-to-do",
        "stay",
        "dining",
        "shopping",
        "events",
        "explore"
      ],
      "default": "discover",
      "required": true
    },
    "discoverCategory": {
      "type": "enumeration",
      "enum": [
        "essential-information",
        "attractions-sights", 
        "culture-museums",
        "nature-beaches"
      ],
      "required": false
    },
    "showInDiscoverMenu": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "order": {
      "type": "integer",
      "default": 0,
      "required": false
    },
    "thingsToDoCategory": {
      "type": "enumeration",
      "enum": [
        "activities-tours",
        "water-activities",
        "nature-wellness", 
        "events-entertainment"
      ],
      "required": false
    },
    "stayCategory": {
      "type": "enumeration",
      "enum": [
        "hotels-resorts",
        "specialized-stays",
        "bookings-planning",
        "transportation"
      ],
      "required": false
    },
    "diningCategory": {
      "type": "enumeration",
      "enum": [
        "restaurants-cafes",
        "bars-nightlife",
        "local-markets-cuisines",
        "culinary-experiences"
      ],
      "required": false
    },
    "shoppingCategory": {
      "type": "enumeration",
      "enum": [
        "shopping-areas",
        "markets-crafts",
        "art-fashion",
        "online-special-offers"
      ],
      "required": false
    },
    "eventsCategory": {
      "type": "enumeration",
      "enum": [
        "event-calendar",
        "music-performance",
        "sports-business",
        "event-organization"
      ],
      "required": false
    },
    "exploreCategory": {
      "type": "enumeration",
      "enum": [
        "current-information",
        "navigation-media",
        "nature-family",
        "events-experiences"
      ],
      "required": false
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": false
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne", 
      "target": "admin::user"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany", 
      "target": "api::tag.tag"
    },
    "relatedArticles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article"
    },
    "viewCount": {
      "type": "integer",
      "default": 0
    },
    "likeCount": {
      "type": "integer",
      "default": 0
    },
    "shareCount": {
      "type": "integer",
      "default": 0
    },
    "commentCount": {
      "type": "integer",
      "default": 0
    },
    "readingTime": {
      "type": "integer"
    },
    "isSticky": {
      "type": "boolean",
      "default": false
    },
    "isFeatured": {
      "type": "boolean", 
      "default": false
    },
    "isBreaking": {
      "type": "boolean",
      "default": false
    },
    "articleType": {
      "type": "enumeration",
      "enum": ["blog", "news", "guide", "review", "interview", "announcement"],
      "default": "blog"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "published", "archived", "scheduled"],
      "default": "draft"
    },
    "publishDate": {
      "type": "datetime"
    },
    "scheduledPublishAt": {
      "type": "datetime"
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 160
    },
    "seoKeywords": {
      "type": "string"
    },
    "socialImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "socialTitle": {
      "type": "string",
      "maxLength": 60
    },
    "socialDescription": {
      "type": "text",
      "maxLength": 160
    },
    "canonicalUrl": {
      "type": "string"
    },
    "customCss": {
      "type": "text"
    },
    "customJs": {
      "type": "text"
    }
  }
}